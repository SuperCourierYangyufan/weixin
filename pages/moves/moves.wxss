.move{
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.moveImg{
  width: 128rpx;
  height: 128rpx;
}

.move_detail{
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-left: 20rpx;
}

.move_name{
  font-size: 32rpx;
  color: #000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.move_year{
  font-size: 28rpx;
  color: #666;
  margin: 8rpx 0 ;
}

.move_director{
  font-size: 30rpx;
  color: #333;
}

.move_rating{
  font-size: 40rpx;
  color: red;
  font-weight: bold;
}